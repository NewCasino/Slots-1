extends layout

block content
	if user !== null
		canvas
		br
		p
			span
				a(href='/logout') Log out
			span
				a#request-credits Get more credits
		script(src='/javascripts/vendor.js')
		script.
			"use strict"
			window.Slots = window.Slots || {};
			
			window.Slots.config = window.Slots.config || {};
			window.Slots.config.user = {
				id: 'lmp',
				email: 'lmp',
				credits: 100
			};
		script(src='/javascripts/app.js')
	else
		h1
			a(href='/login') Log in
			|	or 
			a(href='/signup') sign up
			|.